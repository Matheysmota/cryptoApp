<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="4dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cryptoButton"
        android:layout_width="293dp"
        android:layout_height="44dp"
        app:cardBackgroundColor="@color/crypto_button_color"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="32.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cryptoCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black_seventy_five"
            android:textSize="22sp"
            tools:text="#1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cryptoCoinTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black_seventy_five"
            android:textSize="18sp"
            tools:text="(BTC) Bitcoin" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/favoriteIconImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/favorite_drawable"
            android:backgroundTint="@color/black"
            android:clickable="true"
            android:focusable="true" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>